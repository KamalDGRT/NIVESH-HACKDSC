<%- include('partials/header'); -%>
  <title>Login</title>
  </head>

  <body style="overflow: hidden;">
      <div class="row" style="height:100vh;">
          <div id="right-section" class="col">

              <div id="login-area">
                  <h2>
                      Let's <small class="text-muted">Signup</small>
                  </h2>
                  <form action="/signup" method="POST">
                      <input class="box" type="text" name="username" placeholder="Email or Username">
                      <input class="box" type="password" name="password" placeholder="Password">
                      <div id="buttons">
                          <button type="submit" class="login-btn">Signup</button>
                          <br><a style="font-size: 0.9em;" href="/login">Already have an account yet? Sign in.</a>
                      </div>
                  </form>
              </div>
              
          </div>
      </div>

      <%- include('partials/footer'); -%>